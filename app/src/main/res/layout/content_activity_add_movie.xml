<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".ActivityAddMovie"
    tools:showIn="@layout/activity_add_movie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/Black"
        android:orientation="vertical"
        android:padding="5dp">


        <ImageView
            android:id="@+id/image_view_movie_pic"
            style="@style/Product_Image_Main"
            app:srcCompat="@color/Azure"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/edit_text_movie_name"
            style="@style/text_add_products"
            android:hint="nice"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edit_text_movie_description"
            style="@style/text_add_products"
            android:hint="description"
            android:inputType="text" />

        <Button
            android:id="@+id/button_add_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/DarkRed"
            android:padding="10dp"
            android:text="Add Movie"
            android:textColor="@color/Wheat" />
    </LinearLayout>
</ScrollView>
